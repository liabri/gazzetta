<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="index.css" rel="stylesheet">
    <link href="articles.css" rel="stylesheet">
    <title>Articles</title>
  </head>
  <body>
    <main>
        {{#each inner}}
          <article>
            <a class="article" href="{{path}}">
              <div class="header">
                <p class="date">{{date}}</p>
                <h3>{{title}}</h3>
                <div class="tags">
                  {{#each tags}}
                    <a href="tags#{{this}}" class="tag">#{{this}}</a>
                  {{/each}}
                </div>
                <p class="lang">{{lang}}</p>
              </div>
              <p class="desc">{{desc}}</p>
            </a>
          </article>
        {{/each}}
    </main>
  </body>
</html>